<body>
  <div id="root"></div>

  <script crossorigin src="https://unpkg.com/react@18/umd/react.development.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
  <script type="text/javascript">
    const { useState } = React;

    const products = [
      { id: 1, name: "Silk Blazer by Elara", price: 950, image: "https://via.placeholder.com/300x400?text=Silk+Blazer" },
      { id: 2, name: "Velvet Gown by Orin", price: 1500, image: "https://via.placeholder.com/300x400?text=Velvet+Gown" },
      { id: 3, name: "Leather Boots by Novae", price: 720, image: "https://via.placeholder.com/300x400?text=Leather+Boots" },
    ];

    function App() {
      const [cart, setCart] = useState([]);
      const [cartOpen, setCartOpen] = useState(false);

      const addToCart = (product) => setCart(prev => [...prev, product]);
      const removeFromCart = (index) => setCart(prev => prev.filter((_, i) => i !== index));
      const total = cart.reduce((sum, item) => sum + item.price, 0);

      const handleCheckout = () => {
        alert("This is a demo. Checkout is not connected.");
      };

      return (
        <div>
          <header>
            <h1>LuxWear</h1>
            <div className="cart-icon" onClick={() => setCartOpen(true)}>
              ðŸ›ï¸
              {cart.length > 0 && <span className="badge">{cart.length}</span>}
            </div>
          </header>

          <div className="grid">
            {products.map(product => (
              <div key={product.id} className="card">
                <img src={product.image} alt={product.name} />
                <div className="card-body">
                  <h3>{product.name}</h3>
                  <p>${product.price}</p>
                  <button onClick={() => addToCart(product)}>Add to Cart</button>
                </div>
              </div>
            ))}
          </div>

          {cartOpen && (
            <div className="cart-drawer">
              <h2>Your Cart</h2>
              <button onClick={() => setCartOpen(false)}>Close</button>
              {cart.length === 0 ? (
                <p>Your cart is empty.</p>
              ) : (
                <>
                  {cart.map((item, i) => (
                    <div key={i} style={{ display: "flex", justifyContent: "space-between", marginBottom: "10px" }}>
                      <span>{item.name}</span>
                      <div>
                        ${item.price}
                        <button className="remove-btn" onClick={() => removeFromCart(i)}>âœ–</button>
                      </div>
                    </div>
                  ))}
                  <p><strong>Total: ${total}</strong></p>
                  <button onClick={handleCheckout}>Proceed to Checkout</button>
                </>
              )}
            </div>
          )}
        </div>
      );
    }

    ReactDOM.createRoot(document.getElementById('root')).render(<App />);
  </script>
</body>
</html>
